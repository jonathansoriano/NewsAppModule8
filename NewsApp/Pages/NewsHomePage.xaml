<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsApp.Pages.NewsHomePage"
             Title="NewsHomePage"
             NavigationPage.HasNavigationBar="False"> <!--Getting rid of NavBar in homepage-->
    <Grid RowDefinitions="Auto, Auto, *">
        <!--This 1st row section is the header of the NewsHomePage. -->
        <Label Grid.Row="0"
               Text="News Pilot"
               FontSize="Title"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Padding="20"/>
        <!--This  2nd row section is for the horizontal list of News Categories at the top of the NewsHomePage -->
        <CollectionView Grid.Row="1"
                        Margin= "5"
                        x:Name="CvCategories"
                        HeightRequest="100"
                        SelectionMode="Single"
                        SelectionChanged="CvCategories_SelectionChanged">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="20"/> <!--This tells the list to be scrollable and horizontal -->
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>  <!--The actual items in this CollectionView-->
                <DataTemplate>
                    <Border Padding="10" WidthRequest="150">
                        <VerticalStackLayout Padding="0" Spacing="0" VerticalOptions="Center">
                            <Image HeightRequest="50" Aspect="AspectFit" Source="{Binding ImageUrl}"/>
                            <Label FontSize="Medium" HorizontalOptions="Center" Text="{Binding Name}"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <!--This 3 row section is the long vertical list of articles on start up of the NewsHomePage -->
        <CollectionView Grid.Row="2"
                Margin= "5"
                x:Name="CvNews"
                SelectionMode="Single">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>  <!--This tells the list to be scrollable and vertical -->
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate> <!--The actual items in this second CollectionView-->
                <DataTemplate>
                    <Border Padding="5" Margin="5">
                        <VerticalStackLayout Padding="10" Spacing="0" VerticalOptions="Center">
                            <Image HeightRequest="200" Aspect="Fill" Source="{Binding Image}"/>
                            <Label FontSize="Medium" Text="{Binding Title}"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>